<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="image">
        <item name="cornerSize">25dp</item>
    </style>

    <style name="WelcomeText" parent="TextTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="SignUpText" parent="TextSubHint">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextTitle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>

    <style name="TextSubTitle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="TextDetails">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="TextSubDetails">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="TextHint">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>

    <style name="TextSubHint">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>


    <style name="SignUpDetailsText" parent="TextSubHint">
        <item name="android:textColor">@color/black_details</item>
    </style>

    <style name="HaveAnAccountText" parent="TextSubHint">
        <item name="android:textColor">@color/black_hint</item>
    </style>

    <style name="HistoryImageStyle">
        <item name="cornerSize">@dimen/margin_small_8</item>
        <item name="cornerFamily">rounded</item>

    </style>

    <style name="SearchBarStyle">
        <item name="android:background">@drawable/search_bar_background_light</item>
        <item name="shapeAppearanceOverlay">?attr/materialCardViewStyle</item>
        <!--        <item name="android:elevation">6dp</item>-->
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="hintTextColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>


    <style name="BodyMediumTextStyle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>

    <style name="TitleMediumTextStyle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
    </style>

    <style name="NoOutlineChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipStrokeWidth">0dp</item>
    </style>

</resources>
